<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable">
	<Dialog id="idDialogVHR" title="{i18n>title}" busy="{model>/Busy}" afterClose="onCloseVHR">
		<content>
			<VBox fitContainer="true">
				<smartFilterBar:SmartFilterBar id="idSFB" entitySet="VHSet" persistencyKey="SFPKey" initialized="onInitST"/>
				<smartTable:SmartTable id="idST" entitySet="VHSet" enableAutoBinding="true" initiallyVisibleFields="ID,Value" smartFilterId="idSFB"
					tableType="ResponsiveTable" useExportToExcel="false" useTablePersonalisation="false" beforeRebindTable="onBRT">
					<Table id="idTable" growing="true" growingScrollToLoad="true" growingThreshold="100">
						<items>
							<ColumnListItem type="Navigation" press="onSelectVHR"/>
						</items>
					</Table>
				</smartTable:SmartTable>
			</VBox>
		</content>
		<endButton>
			<Button text="{i18n>close}" type="Emphasized" press="onCloseVHR"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>