<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <FlexBox wrap="Wrap">
        <Avatar
            backgroundColor="Accent10"
            src="sap-icon://collections-insight"
            displaySize="XL"
        />
        <l:VerticalLayout
            class="sapUiSmallMarginBeginTop sapUiSmallMarginBeginEnd"
        >
            <HBox class="sapUiTinyMarginBottom">
                <Label
                    text="{i18n>ID}"
                    class="sapUiSmallMarginBeginTop sapUiSmallMarginEnd"
                    design="Bold"
                />
                <Text text="{ID}" />
            </HBox>
            <HBox class="sapUiTinyMarginBottom">
                <Label
                    text="{i18n>key}"
                    class="sapUiSmallMarginEnd"
                    design="Bold"
                />
                <Text text="{Key}" />
            </HBox>
        </l:VerticalLayout>
        <l:VerticalLayout
            class="sapUiSmallMarginBeginTop sapUiSmallMarginBeginEnd"
        >
            <Title
                text="{i18n>value}"
                class="sapUiTinyMarginBottom"
            />
            <Text text="{Value}" />
        </l:VerticalLayout>
        <l:VerticalLayout class="sapUiSmallMarginBeginEnd">
            <Title
                text="{i18n>amount}"
                class="sapUiTinyMarginBottom"
            />
            <Text text="{Amount}" />
        </l:VerticalLayout>
    </FlexBox>
</core:FragmentDefinition>
