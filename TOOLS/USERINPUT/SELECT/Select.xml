<Select items="{listModel>/}" selectedKey="{listModel>/Key}" change="onChangeSelect">
	<core:Item key="{listModel>Key}" text="{listModel>Text}"/>
</Select>
<Select items="{path: '/VHSelectSet'}" selectedKey="{listModel>/Text}" autoAdjustWidth="false" required="true" showSecondaryValues="true"
	visible="false">
	<core:ListItem key="{Key}" text="{Text}" additionalText="{AdditionalText}"/>
</Select>
