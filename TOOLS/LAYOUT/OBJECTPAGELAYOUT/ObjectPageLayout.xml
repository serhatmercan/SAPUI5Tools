<mvc:View xmlns="sap.uxap" xmlns:m="sap.m" xmlns:form="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:smartForm="sap.ui.comp.smartform" xmlns:f="sap.f">
	<ObjectPageLayout id="OPL" busy="{model>/Busy}" busyIndicatorDelay="0" height="100%" alwaysShowContentHeader="true"
		preserveHeaderStateOnScroll="true" showFooter="true" showHeaderContent="true" toggleHeaderOnTitleClick="true">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<heading>
					<m:Input editable="{= !!${model>/Value} }"/>
					<m:Title text="Text"/>
				</heading>
				<heading>
					<m:HBox>
						<f:Avatar backgroundColor="Transparent" displaySize="L" src="sap-icon://activity-individual"/>
						<m:VBox class="sapUiMediumMarginBegin">
							<m:Title text="{i18n>ID}:"/>
							<m:ObjectStatus text="{ID}" class="sapMObjectStatusLarge"/>
						</m:VBox>
						<m:VBox class="sapUiMediumMarginBegin">
							<m:Title text="{i18n>name}:"/>
							<m:ObjectStatus text="{Name}" class="sapMObjectStatusLarge"/>
						</m:VBox>
					</m:HBox>
				</heading>
				<expandedContent>
					<m:Label text="{Label}"/>
				</expandedContent>
				<snappedContent>
					<m:Label text="{Label}"/>
				</snappedContent>
				<actions>
					<m:OverflowToolbarButton press="onPress"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
			<f:GridList></f:GridList>
			<smartForm:SmartForm></smartForm:SmartForm>
		</headerContent>
		<sections>
			<ObjectPageSection id="OPS" showTitle="false" visible="{= !${model>/Value} }">
				<subSections>
					<ObjectPageSubSection class="sapUxAPObjectPageSubSectionFitContainer">
						<m:MessagePage id="idMessagePage" icon="sap-icon://inspection" description="" text="{i18n>initialMessagePageTitle}" showHeader="false"/>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="{i18n>ops}" titleUppercase="false" showTitle="false" visible="false">
				<subSections>
					<ObjectPageSubSection class="sapUxAPObjectPageSubSectionFitContainer sapUxAPObjectPageSubSection sapUxAPBlockContainer" title="{i18n>oPSS1}">
						<blocks>
							<form:SmartForm>
								<form:Group>
									<form:GroupElement>
										<smartField:SmartField value="{ID}"/>
									</form:GroupElement>
								</form:Group>
								<form:Group>
									<form:GroupElement>
										<smartField:SmartField value="{Value}"/>
									</form:GroupElement>
								</form:Group>
							</form:SmartForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection>
				<subSections>
					<ObjectPageSubSection title="{i18n>oPSS2}">
						<blocks>
							<core:Fragment type="XML" fragmentName="..."/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:Button icon="sap-icon://alert" text="{=${message>/}.length}" visible="{=${message>/}.length > 0}" type="Emphasized"
					press="onMessagePopoverPress"/>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="X" press="onPress"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>