<!--xmlns="sap.uxap" xmlns:m="sap.m" xmlns:form="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns:f="sap.f"-->
<ObjectPageLayout id="idOPL" busy="{model>/Busy}" busyIndicatorDelay="0" height="100%" showFooter="true" showHeaderContent="true"
	toggleHeaderOnTitleClick="true">
	<headerTitle>
		<ObjectPageDynamicHeaderTitle>
			<heading>
				<m:Title text="Text"/>
			</heading>
			<actions>
				<m:OverflowToolbarButton press="onPress"/>
			</actions>
		</ObjectPageDynamicHeaderTitle>
	</headerTitle>
	<headerContent>
		<f:GridList></f:GridList>
	</headerContent>
	<sections>
		<ObjectPageSection>
			<subSections>
				<ObjectPageSubSection title="{i18n>oPSS1}">
					<blocks>
						<form:SmartForm>
							<form:Group>
								<form:GroupElement>
									<smartField:SmartField value="{ID}"/>
								</form:GroupElement>
							</form:Group>
							<form:Group>
								<form:GroupElement>
									<smartField:SmartField value="{Value}"/>
								</form:GroupElement>
							</form:Group>
						</form:SmartForm>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
		</ObjectPageSection>
		<ObjectPageSection>
			<subSections>
				<ObjectPageSubSection title="{i18n>oPSS2}">
					<blocks>
						<core:Fragment type="XML" fragmentName="..."/>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
		</ObjectPageSection>
	</sections>
	<footer>
		<m:OverflowToolbar>
			<m:Button icon="sap-icon://alert" text="{=${message>/}.length}" visible="{=${message>/}.length > 0}" type="Emphasized"
				press="onMessagePopoverPress"/>
			<m:ToolbarSpacer/>
			<m:Button type="Emphasized" text="X" press="onPress"/>
		</m:OverflowToolbar>
	</footer>
</ObjectPageLayout>