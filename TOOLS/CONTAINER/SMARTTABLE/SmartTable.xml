<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core" xmlns:ui="sap.ui.table"
	controllerName="com.serhatmercan.controller.SmartTable" height="100%">
	<semantic:FullscreenPage showFooter="false">
		<VBox fitContainer="true" busy="{viewModel>/Busy}">
			<smartvariants:SmartVariantManagement id="idSVM" persistencyKey="pkVariant"/>
			<smartFilterBar:SmartFilterBar id="idSFB" entitySet="AnnotationListSet" persistencyKey="pKeySFP">
				<smartFilterBar:layoutData>
					<FlexItemData shrinkFactor="0"/>
				</smartFilterBar:layoutData>
			</smartFilterBar:SmartFilterBar>
			<smartTable:SmartTable id="idST" entitySet="AnnotationListSet" header="{i18n>smartTable}" smartFilterId="idSFB" smartVariant="idSVM"
				tableBindingPath="to_Item" tableType="ResponsiveTable" initiallyVisibleFields="ID,Key" ignoredFields="Value" requestAtLeastFields="ID"
				width="25%" demandPopin="true" enableAutoBinding="true" showTablePersonalisation="false" useTablePersonalisation="true"
				useExportToExcel="false" beforeRebindTable="onBRT" initialized="onInitST">
				<smartTable:customToolbar>
					<OverflowToolbar design="Transparent">
						<ToolbarSpacer/>
						<Button type="Emphasized" text="{i18n>text}" tooltip="{i18n>text}" press="onShow"/>
					</OverflowToolbar>
				</smartTable:customToolbar>
				<!-- Responsive Table -->
				<Table id="idTableST" mode="MultiSelect" growing="true" growingScrollToLoad="true" growingThreshold="100" sticky="ColumnHeaders">
					<columns>
						<Column id="idColumnKey">
							<customData>
								<core:CustomData key="p13nData" value='\{"columnKey": "Key", "leadingProperty": "Key", "columnIndex":"7"}'/>
							</customData>
							<Text text="{i18n>key}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="onDetail">
							<cells>
								<Text text="{Key}" wrapping="false"/>
								<Text text="{ path: 'Key', type: 'sap.ui.model.type.Integer' }"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<!-- Grid Table -->
				<ui:Table id="idUITable" visibleRowCount="15" enableColumnFreeze="true" selectionMode="Single">
					<ui:Column id="idColumn" width="10rem">
						<Label text="{i18n>column}"/>
						<ui:customData>
							<core:CustomData key="p13nData" value='\{"columnKey": "Key", "leadingProperty": "Key", "columnIndex":"1"}'/>
						</ui:customData>
						<ui:template>
							<DatePicker value="{ path:'Date', type:'sap.ui.model.type.Date', formatOptions: {UTC:true} }"/>
						</ui:template>
					</ui:Column>
					<ui:Column id="idColumn" width="10rem">
						<Label text="{i18n>column}"/>
						<ui:customData>
							<core:CustomData key="p13nData" value='\{"columnKey": "Key", "leadingProperty": "Key", "columnIndex":"2"}'/>
						</ui:customData>
						<ui:template>
							<Input value="{Key}" showSuggestion="false" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="onVHR"/>
						</ui:template>
					</ui:Column>
				</ui:Table>
			</smartTable:SmartTable>
		</VBox>
	</semantic:FullscreenPage>
</mvc:View>