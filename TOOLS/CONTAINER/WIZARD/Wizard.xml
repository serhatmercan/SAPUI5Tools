<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<NavContainer id="idNavContainer">
		<Page busy="{model>/Busy}" floatingFooter="true" showFooter="{=${message>/}.length > 0}" showHeader="false">
			<content>
				<Wizard id="idWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content" complete="onCompleteWizard">
					<WizardStep id="idWS1" title="{i18n>ws1}" validated="true">
						<core:Fragment fragmentName="..." type="XML"/>
					</WizardStep>
					<WizardStep id="idWS2" title="{i18n>ws2}">
						<core:Fragment fragmentName="..." type="XML"/>
					</WizardStep>
				</Wizard>
			</content>
			<footer>
				<OverflowToolbar>
					<Button id="idButtonMessage" icon="sap-icon://alert" text="{=${message>/}.length}" type="Emphasized" visible="{=${message>/}.length > 0}"
						press="onShowMessages"/>
				</OverflowToolbar>
			</footer>
		</Page>
	</NavContainer>
</mvc:View>