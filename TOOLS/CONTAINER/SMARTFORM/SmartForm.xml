<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield">
	<smartForm:SmartForm id="idSmartForm" entityType="SFEntity" editable="true">
		<smartForm:layout>
			<smartForm:ColumnLayout columnsM="2" columnsL="2" columnsXL="2"/>
			<smartForm:Layout labelSpanL="3"/>
		</smartForm:layout>
		<smartForm:Group>
			<smartForm:GroupElement label="{/#SFEntity/Value/@sap:label}">
				<smartField:SmartField id="idSmartField" value="{Value}"/>
			</smartForm:GroupElement>
			<smartform:GroupElement>
				<smartField:SmartField value="{Key}" textLabel="{i18n>key}"/>
			</smartform:GroupElement>
		</smartForm:Group>
	</smartForm:SmartForm>
</core:FragmentDefinition>