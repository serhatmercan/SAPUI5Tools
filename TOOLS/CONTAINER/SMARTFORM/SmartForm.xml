<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:ndc="sap.ndc" xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield">
	<smartForm:SmartForm id="SmartForm" entityType="SFEntity" editable="true">
		<smartForm:layout>
			<smartForm:ColumnLayout columnsM="2" columnsL="2" columnsXL="2"/>
			<smartForm:Layout labelSpanL="3"/>
		</smartForm:layout>
		<smartForm:Group>
			<smartForm:GroupElement label="{/#SFEntity/Value/@sap:label}">
				<smartField:SmartField id="SmartField" value="{Value}"/>
			</smartForm:GroupElement>
			<smartform:GroupElement label="Key">
				<Select id="idKey" selectedKey="{Key}" showSecondaryValues="true">
					<core:ListItem key="X" additionalText="X" text="X Data"/>
					<core:ListItem key="Y" additionalText="Y" text="Y Data"/>
				</Select>
			</smartform:GroupElement>
			<smartform:GroupElement>
				<smartField:SmartField value="{Key}" textLabel="{i18n>key}"/>
				<HBox justifyContent="SpaceBetween">
					<Button press="onPress"/>
					<smartfield:SmartField value="{Data}"/>
				</HBox>
			</smartform:GroupElement>
			<smartform:GroupElement>
				<smartfield:SmartField value="{Data}"/>
				<HBox justifyContent="SpaceBetween">
					<Button icon="sap-icon://bar-code" text="{i18n>scanBarcode}" press="onScanBarcode"/>
					<smartfield:SmartField value="{Key}"/>
				</HBox>
			</smartform:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{ID}"/>
				<ndc:BarcodeScannerButton scanSuccess="onSSID"/>
			</smartForm:GroupElement>
		</smartForm:Group>
	</smartForm:SmartForm>
</core:FragmentDefinition>