<mvc:View controllerName="com.serhatmercan.SimpleForm" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core">
    <f:SimpleForm>
        <f:content>
            <core:Title text="{i18n>title}" />
            <Label text="{i18n>label}" required="true" />
            <Input value="{model>/Value}" editable="false" showSuggestion="false" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="onShowVHValue">
                <layoutData>
                    <layout:GridData span="L12 M12 S12" indent="L1 M1 S1" />
                </layoutData>
            </Input>
            <core:Title />
        </f:content>
    </f:SimpleForm>
</mvc:View>
