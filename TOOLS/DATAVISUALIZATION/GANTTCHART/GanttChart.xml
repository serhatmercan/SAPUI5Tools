<core:FragmentDefinition xmlns="sap.gantt.simple" xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns:axistime="sap.gantt.axistime"
	xmlns:config="sap.gantt.config" xmlns:mvc="sap.ui.core.mvc" xmlns:shapes="sap.gantt.simple.shapes" xmlns:table="sap.ui.table">
	<GanttChartContainer>
		<toolbar>
			<ContainerToolbar design="Transparent">
				<m:Button text="{i18n>displayDetail}" press="onShowDetailGC"/>
			</ContainerToolbar>
		</toolbar>
		<GanttChartWithTable id="idGCTable" shapeSelectionMode="Single" shapeDrop="onGCShapeDrop" shapeResize="onGCShapeResize">
			<table>
				<table:TreeTable selectionMode="Single" visibleRowCountMode="Auto" selectionBehavior="RowSelector"
					rows="{ path:'viewModel>/GanttData', parameters:{ arrayNames:['Children'], numberOfExpandedLevels:1 } }" enableColumnReordering="true">
					<table:columns>
						<table:Column label="{i18n>manufacturer}" hAlign="Center">
							<table:template>
								<m:ObjectIdentifier title="{viewModel>Manufacturer}" text="{viewModel>ManufacturerDesc}"/>
							</table:template>
						</table:Column>
						<table:Column label="{i18n>bandNo}" hAlign="Center">
							<table:template>
								<m:Text text="{viewModel>BandNo}"/>
							</table:template>
						</table:Column>
						<table:Column label="{i18n>warning}" hAlign="Center">
							<table:template>
								<core:Icon src="{ path:'viewModel>Msgty', formatter: '.formatter.getMessageIcon' }"
									color="{ path:'viewModel>Msgty', formatter: '.formatter.getMessageColor' }"/>
							</table:template>
						</table:Column>
					</table:columns>
					<table:rowSettingsTemplate>
						<GanttRowSettings rowId="{viewModel>Manufacturer}.{viewModel>BandNo}.{viewModel>PlanNo}"
							shapes1="{ path:'viewModel>SubTask', templateShareable:true }">
							<shapes1>
								<BaseRectangle title="{viewModel>Model}" tooltip="{viewModel>ModelName}"
									time="{ path:'viewModel>StartTime', formatter:'.formatter.convertTime' }"
									endTime="{ path:'viewModel>EndTime', formatter:'.formatter.convertTime' }"
									fill="{ parts:[ { path: 'viewModel>ReservationNo'}, { path: 'viewModel>Msgty'} ], formatter: '.formatter.getChartIconColor' }" height="19"
									horizontalTextAlignment="Start" verticalTextAlignment="Center" selectable="true" draggable="true"/>
							</shapes1>
						</GanttRowSettings>
					</table:rowSettingsTemplate>
				</table:TreeTable>
			</table>
		</GanttChartWithTable>
	</GanttChartContainer>
</core:FragmentDefinition>