<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<RadioButtonGroup id="RBG" columns="2" valueState="Information" select="onSelectRBG">
		<RadioButton id="RBX" groupName="GroupA" text="{i18n>x}" selected="{model>/x}"/>
		<RadioButton id="RBY" groupName="GroupA" text="{i18n>y}" selected="{model>/y}"/>		
	</RadioButtonGroup>
</core:FragmentDefinition>
