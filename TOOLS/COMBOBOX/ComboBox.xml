<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ComboBox items="{/...Set}" selectedKey="{model>/Value}">
		<items>
			<core:ListItem key="{ID}" text="{ID}" additionalText="{Description}" />
		</items>
	</ComboBox>
</core:FragmentDefinition> <!--
