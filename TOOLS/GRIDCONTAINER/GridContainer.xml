<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f">
    <ScrollContainer height="100%" vertical="true" width="100%" visible="{model>/ItemSelected}">
        <f:GridContainer>
			<GenericTile>
                <layoutData>
                    <f:GridContainerItemLayoutData columns="2" minRows="2"/>
                </layoutData>
                <TileContent>
                    <NumericContent/>
                </TileContent>
            </GenericTile>
        </f:GridContainer>    
    </ScrollContainer>
    <f:Card>
        <f:layoutData>
			<f:GridContainerItemLayoutData columns="3"/>
		</f:layoutData>
        <f:content>
        </f:content>
    </f:Card>
</core:FragmentDefinition>
