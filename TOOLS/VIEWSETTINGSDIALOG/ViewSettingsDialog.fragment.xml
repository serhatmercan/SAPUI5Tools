<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <!-- Filter -->
    <ViewSettingsDialog confirm="onFilter">
        <filterItems>
            <ViewSettingsFilterItem
                key="Category"
                text="Category"
                selected="true"
            >
                <items>
                    <ViewSettingsFilterItem
                        key="Category__EQ__0"
                        text="Beverages"
                    />
                    <ViewSettingsFilterItem
                        key="Category__EQ__1"
                        text="Electronics"
                    />
                    <ViewSettingsFilterItem
                        key="Category__EQ__2"
                        text="Food"
                    />
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsFilterItem
                key="Price"
                text="Price"
                selected="true"
            >
                <items>
                    <ViewSettingsFilterItem
                        key="Price__LT__10"
                        text="Less than €10"
                    />
                    <ViewSettingsFilterItem
                        key="Price__BT__10__50"
                        text="Between €10 and €50"
                    />
                    <ViewSettingsFilterItem
                        key="Price__GT__50"
                        text="More than €50"
                    />
                </items>
            </ViewSettingsFilterItem>
        </filterItems>
    </ViewSettingsDialog>
    <!-- Group -->
    <ViewSettingsDialog confirm="onGroup">
        <groupItems>
            <ViewSettingsItem
                key="Category"
                text="Category"
            />
        </groupItems>
    </ViewSettingsDialog>
    <!-- Sort -->
    <ViewSettingsDialog confirm="onSort">
        <sortItems>
            <ViewSettingsItem
                key="Value"
                text="Value"
                selected="true"
            />
            <ViewSettingsItem
                key="ValueII"
                text="ValueII"
            />
        </sortItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>
