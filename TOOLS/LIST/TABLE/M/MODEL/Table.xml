<Table id="idTable" items="{tableModel>/}" selectionChange="onSelectionChange">
	<headerToolbar>
		<Toolbar>
			<ToolbarSeparator class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiTinyMarginBottom"/>
		</Toolbar>
	</headerToolbar>
	<infoToolbar>
		<Toolbar>
			<ToolbarSeparator/>
		</Toolbar>
	</infoToolbar>
	<columns>
		<Column mergeDuplicates="true">
			<Text text="{i18n>value1}"/>
		</Column>
		<Column mergeDuplicates="true">
			<Text text="{i18n>value2}"/>
		</Column>
		<Column>
			<Text text="{i18n>value3}"/>
		</Column>
		<Column hAlign="Center">
			<Text text=""/>
		</Column>
	</columns>
	<items>
		<ColumnListItem id="idCLI" type="Active" vAlign="Middle" press="onPress">
			<cells>
				<Text text="{tableModel>Value1}"/>
				<Text text="{tableModel>Value2}"/>
				<ComboBox items="{tableModel>Data}" showSecondaryValues="true" change="onChangeCB">
					<core:ListItem key="{tableModel>ID}" text="{tableModel>ID}" additionalText="{tableModel>Text}"/>
				</ComboBox>
				<Button icon="sap-icon://decline" tooltip="{i18n>delete}" type="Transparent" press="onDeleteRow"/>
			</cells>
		</ColumnListItem>
	</items>
</Table>
