<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:dnd="sap.ui.core.dnd" xmlns:t="sap.ui.table">
    <t:Table rows="{model>/Items}">
        <t:columns>
			<t:Column>
				<Label text="{i18n>ID}"/>
				<t:template>
					<ObjectIdentifier title="{model>ID}"/>
				</t:template>
			</t:Column>
		</t:columns>
    </t:Table>
</core:FragmentDefinition>
