<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <NotificationList>
        <NotificationListItem title="{model>/Title}" description="{model>/Description}">
            <buttons>
                <Button text="{i18n>OK}" press="onAcceptNLI" />
                <Button text="{i18n>reject}" press="onRejectNLI" />
            </buttons>
        </NotificationListItem>
    </NotificationList>
</core:FragmentDefinition>
