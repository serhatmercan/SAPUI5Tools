<!-- Button -->
<Button visible="{=${message>/}.length > 0}" text="{= ${message>/}.length }" type="Emphasized" icon="sap-icon://message-popup"
	press="onShowMessages"/>
<!-- Semantic Page Header-->
<semantic:SemanticPage showFooter="{=${message>/}.length > 0}"/>
<!-- Semantic Page Footer -->
<semantic:footerCustomActions>
	<Button visible="{=${message>/}.length > 0}" text="{= ${message>/}.length }" type="Emphasized" icon="sap-icon://message-popup"
		press="onShowMessages"/>
</semantic:footerCustomActions>
<!-- Semantic Page Message Indicator -->
<semantic:messagesIndicator>
	<semantic:MessagesIndicator press="onShowMessages"/>
</semantic:messagesIndicator>
<!-- Dialog - Header -->
<customHeader>
	<OverflowToolbar class="toolbarBorder">
		<ToolbarSpacer/>
		<Title text="{i18n>title}" class="sapUiTinyMarginBegin"/>
		<ToolbarSpacer/>
		<Button visible="{=${message>/}.length > 0}" text="{= ${message>/}.length }" type="Emphasized" icon="sap-icon://message-popup"
			press="onShowMessages"/>
	</OverflowToolbar>
</customHeader>
<!-- Dialog - Footer -->
<Toolbar>
	<Button visible="{=${message>/}.length > 0}" text="{= ${message>/}.length }" type="Emphasized" icon="sap-icon://message-popup"
		press="onShowMessages"/>
	<ToolbarSpacer/>
	<Button text="{i18n>text}"/>
</Toolbar>