<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>explanation}" type="Message" afterClose="onACConfirmDialog">		
		<content>
            <TextArea value="{model>/Value}" maxLength="80" placeholder="{i18n>infoExplanation}" width="100%"/>			
		</content>
        <beginButton>
            <Button text="{i18n>OK}" type="Emphasized" press="onSaveConfirmDialog"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onACConfirmDialog"/>
        </endButton>
	</Dialog>
</core:FragmentDefinition>