<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover>
		<List items="{model>/Items}">
			<ObjectListItem title="{model>ID}" type="Inactive">
				<firstStatus>
					<ObjectStatus text="{model>ID}"/>
				</firstStatus>
				<ObjectAttribute text="{model>Text}"/>
			</ObjectListItem>
		</List>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>close}" press="onClose"/>
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>
<!--
POPOVER - ATTRIBUTES

contentHeight="auto" 
contentWidth="30rem" 
