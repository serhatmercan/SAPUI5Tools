<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover placement="{i18n>placement}" title="{i18n>popover}" contentHeight="auto" contentWidth="30rem">
		<List items="{model>/Data}">
			<ObjectListItem title="{model>ID}" type="Inactive">
				<firstStatus>
					<ObjectStatus text="{model>ID}"/>
				</firstStatus>
				<ObjectAttribute text="{model>Text}"/>
			</ObjectListItem>
		</List>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>close}" press="onClose"/>
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>