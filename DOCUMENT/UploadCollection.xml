<UploadCollection id="idUCDocument" multiple="true" instantUpload="false" uploadUrl="{viewModel>/DocumentUrl}"
	beforeUploadStarts="onBUSDocument" change="onUCDocument" fileDeleted="onFDDocument" items="{ path: '/DocumentSet', suspended: true }">
	<items>
		<UploadCollectionItem fileName="{Filename}" mimeType="{Mimetype}" documentId="{Guid}" url="{Url}" enableDelete="true" visibleEdit="false"/>
	</items>
</UploadCollection>
<UploadCollection id="idUCDocument" instantUpload="true" multiple="false" uploadUrl="/sap/opu/odata/sap/ZSM_DOCUMENT_SRV/DocumentSet"
	beforeUploadStarts="onBUSDocument" change="onUCDocument" fileDeleted="onFDSingleDocument" uploadComplete="onUpdCmpDocument"
	items="{model>/Documents}">
	<items>
		<UploadCollectionItem documentId="{model>DocNumber}" fileName="{model>FileName}" mimeType="{model>Mimetype}" url="{model>Url}"/>
	</items>
</UploadCollection>