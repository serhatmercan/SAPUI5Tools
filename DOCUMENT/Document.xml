<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>uploadFile}" afterClose="onCloseDocument">
		<content>
			<UploadCollection id="DocumentUC" items="{ path: '/DocumentSet', suspended: true }" uploadUrl="{model/DocumentUrl}"
				instantUpload="false" multiple="true" maximumFilenameLength="55" maximumFileSize="10" noDataDescription="{i18n>noAttach}"
				sameFilenameAllowed="true" beforeUploadStarts="onBUSDocument" change="onUCDocument" fileDeleted="onFDDocument" selectionChange="onSCDocument">
				<toolbar>
					<OverflowToolbar>
						<Title/>
						<ToolbarSpacer/>
						<Button id="DownloadButton" text="{i18n>download}" type="Transparent" enabled="false"  press="onDownloadItem"/>
						<UploadCollectionToolbarPlaceholder/>
					</OverflowToolbar>
				</toolbar>
				<items>
					<UploadCollectionItem documentId="{DocumentID}" fileName="{Filename}" mimeType="{Mimetype}" url="{Url}" enableDelete="true"
						enableEdit="false" visibleEdit="false" press="onPressUCI"/>
				</items>
			</UploadCollection>
			<UploadCollection id="DocumentUC" instantUpload="true" multiple="false" uploadUrl="/sap/opu/odata/sap/ZMM_SM_SRV/DocumentSet"
				beforeUploadStarts="onBUSDocument" change="onUCDocument" fileDeleted="onFDSingleDocument" uploadComplete="onUpdCmpDocument"
				items="{model>/Documents}">
				<items>
					<UploadCollectionItem documentId="{model>DocumentID}" fileName="{model>FileName}" mimeType="{model>Mimetype}"
						url="{model>Url}" enableEdit="false" visibleEdit="false"/>
				</items>
			</UploadCollection>
		</content>
		<Toolbar>
			<Button visible="{=${message>/}.length > 0}" text="{= ${message>/}.length }" type="Emphasized" icon="sap-icon://message-popup"
				press="onShowMessages"/>
			<ToolbarSpacer/>
			<Button text="{i18n>ok}" type="Emphasized" press="onCUDocument"/>
			<Button text="{i18n>close}" press="onCloseDocument"/>
		</Toolbar>
	</Dialog>
</core:FragmentDefinition>