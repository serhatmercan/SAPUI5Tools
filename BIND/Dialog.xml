<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartform="sap.ui.comp.smartform"
	xmlns:smartfield="sap.ui.comp.smartfield">
	<Dialog title="{i18n>title}" afterClose="onACDialog">
		<content>
			<smartform:SmartForm id="idSmartForm" editable="true">
				<smartform:Group>
					<smartform:GroupElement>
						<smartfield:SmartField value="{ID}"/>
					</smartform:GroupElement>
				</smartform:Group>
			</smartform:SmartForm>
		</content>
		<beginButton>
			<Button text="{i18n>ok}" type="Emphasized" press="onConfirmDialog"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>cancel}" press="onACDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>